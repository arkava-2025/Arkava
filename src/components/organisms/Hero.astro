---
import { ImageCarousel } from '@/components/molecules/Carousel';

const { data } = Astro.props;
---

<section class="relative w-full h-[80vh] md:h-[85vh] overflow-hidden">
  {/* Capa del carrusel al 100% */}
  <div class="absolute inset-0">
    <ImageCarousel images={data?.images} client:load />
  </div>

  {/* Overlay para mejorar contraste del texto (opcional) */}
  <!-- <div class="absolute inset-0 bg-black/20 pointer-events-none"></div> -->

  <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent">
  </div>

  {/* Contenido centrado */}
  <div class="relative z-10 flex items-center justify-center h-full">
    <div
      class="mx-auto max-w-6xl px-6 text-center text-white absolute bottom-[30px]"
    >
      <h1
        class="text-3xl md:text-6xl font-pp-sans text-white drop-shadow-[0_4px_6px_rgba(0,0,0,1)]"
      >
        {data?.title}
      </h1>
      {
        data?.description && (
          <p class="mt-4 text-base md:text-lg opacity-95 text-white drop-shadow-[0_4px_6px_rgba(0,0,0,1)] w-[70%] mx-auto">
            {data.description}
          </p>
        )
      }
      <div class="mt-6 flex items-center justify-center">
        <a
          href="#servicios"
          class="bg-tertiary hover:bg-tertiary/80 text-white font-semibold py-2.5 px-5 rounded-md shadow"
        >
          Conoce nuestros servicios
        </a>
      </div>
    </div>
  </div>
</section>
